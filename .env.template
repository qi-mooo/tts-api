# TTS API Docker 环境配置
# 复制此文件为 .env 并修改配置

# 服务端口（主机端口:容器端口）
TTS_PORT=8080

# Flask 环境
FLASK_ENV=production
FLASK_DEBUG=0

# 日志级别
TTS_LOG_LEVEL=INFO

# 管理员账户
TTS_ADMIN_USERNAME=admin
TTS_ADMIN_PASSWORD=admin123

# TTS 配置
TTS_NARRATION_VOICE=zh-CN-YunjianNeural
TTS_DIALOGUE_VOICE=zh-CN-XiaoyiNeural
TTS_DEFAULT_SPEED=1.2

# 数据库配置
TTS_DATABASE_PATH=/app/data/tts_api.db
TTS_DATABASE_CLEANUP_DAYS=30

# 功能开关
TTS_ENABLE_REQUEST_LOGGING=true
TTS_ENABLE_METRICS=true

