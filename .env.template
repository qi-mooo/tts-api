# TTS API 配置模板
# 复制此文件为 .env 并根据需要修改配置

# Flask 应用配置
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_SECRET_KEY=your-secret-key-here

# TTS 服务配置
TTS_CONFIG_FILE=config.json
TTS_LOG_LEVEL=INFO
TTS_MAX_WORKERS=10

# 管理员账户配置
TTS_ADMIN_USERNAME=admin
TTS_ADMIN_PASSWORD=change-this-password

# 语音配置
TTS_NARRATION_VOICE=zh-CN-YunjianNeural
TTS_DIALOGUE_VOICE=zh-CN-XiaoyiNeural
TTS_DEFAULT_SPEED=1.2

# 缓存配置
TTS_CACHE_SIZE_LIMIT=10485760
TTS_CACHE_TIME_LIMIT=1200

# 日志配置
TTS_LOG_FILE=logs/app.log
TTS_LOG_MAX_SIZE=10MB
TTS_LOG_BACKUP_COUNT=5

# 字典服务配置
TTS_DICTIONARY_ENABLED=true
TTS_DICTIONARY_RULES_FILE=dictionary/rules.json

# 系统配置
TTS_HEALTH_CHECK_INTERVAL=30
TTS_RESTART_TIMEOUT=60
SYSTEM_HOST=0.0.0.0
SYSTEM_PORT=5000

# 可选：Redis 配置（如果使用 Redis 缓存）
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=

# 可选：数据库配置（如果需要持久化存储）
# DATABASE_URL=sqlite:///tts.db