# TTS API 环境配置模板
# 复制此文件为 .env 并修改相应配置

# 管理员配置
TTS_ADMIN_USERNAME=admin
TTS_ADMIN_PASSWORD=admin123

# 语音配置
TTS_NARRATION_VOICE=zh-CN-YunjianNeural
TTS_DIALOGUE_VOICE=zh-CN-XiaoyiNeural
TTS_DEFAULT_SPEED=1.2

# 系统配置
TTS_LOG_LEVEL=INFO
TTS_MAX_WORKERS=10
FLASK_ENV=production
FLASK_DEBUG=0

# 缓存配置
TTS_CACHE_SIZE_LIMIT=52428800
TTS_CACHE_TIME_LIMIT=3600

# 服务配置
TTS_PORT=5000
TTS_HOST=0.0.0.0